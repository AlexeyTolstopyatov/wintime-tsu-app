<Application x:Class="WinTime.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WinTime"
             xmlns:mica="clr-namespace:MicaWPF.Styles;assembly=MicaWPF"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
         <!-- Dark theme disabled in design mode by default -->
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <!-- Connecting Fluent experience -->
                 <ui:ThemesDictionary Theme="Light"/>
                 <ui:ControlsDictionary/>
                 <ui:ContextMenuLoader/>
                 <!-- Connecting Windows 11 Experience -->
                 <mica:ControlsDictionary/>
                 <mica:ThemeDictionary Theme="Auto"/>
             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
    </Application.Resources>
</Application>
